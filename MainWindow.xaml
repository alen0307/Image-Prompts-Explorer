<Window x:Class="提示词查看wpf3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:提示词查看wpf3"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200" Icon="/扁平化风格28.ico">
    <DockPanel Background="#999999">
        <!-- 工具栏 -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button x:Name="BtnRefresh" Content="刷新" Click="BtnRefresh_Click"  />
            <Button x:Name="BtnAddMoveTo" Content="加入移动目标" Click="BtnAddMoveTo_Click"
        ToolTip="将当前目录添加为移动目标" />
            <Button x:Name="BtnAddFav"  Content="加入收藏" Click="BtnAddFav_Click" />
            <Separator/>
            <ComboBox x:Name="CboFav" Width="120" Style="{StaticResource RoundedComboBox}"  SelectionChanged="CboFav_SelectionChanged" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Button x:Name="BtnDelImg" Content="删除图片" Click="BtnDelImg_Click" />
            <ComboBox x:Name="CboSort" Width="120" Style="{StaticResource RoundedComboBox}"  SelectedIndex="3" SelectionChanged="CboSort_SelectionChanged" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label x:Name="LabelInfo" HorizontalAlignment="Right" Visibility="Collapsed"
                         VerticalAlignment="Center"                        
                        Content="是不是这样啊"/>
            <Separator/>
            <ComboBox x:Name="comboBox_MoveToPath" Width="180" Style="{StaticResource RoundedComboBox}"
          ToolTip="移动目标目录" VerticalAlignment="Center" SelectionChanged="comboBox_MoveToPath_SelectionChanged"/>
            <Button Content="..." Width="30" Click="Btn_PickMoveToPath_Click"
        ToolTip="添加移动目标目录" VerticalAlignment="Center"/>
            
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" Background="#bbbbbb"/>
            <GridSplitter Grid.Column="3" Width="3" HorizontalAlignment="Stretch" Background="#bbbbbb"/>

            <!-- 左侧目录树 -->
            <TreeView x:Name="TreeView1" Grid.Column="0" BorderThickness="0" Background="#999999"
          SelectedItemChanged="TreeView1_SelectedItemChanged"
          
          FontSize="16">
                
            </TreeView>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="223*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="198*"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <ListView x:Name="ListView1" Background="#999999"
                  DockPanel.Dock="Top" MouseDoubleClick="ListView1_MouseDoubleClick"
                              SelectionChanged="ListView1_SelectionChanged"
                        MouseMove="ListView1_MouseMove"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          VirtualizingPanel.IsVirtualizing="True"
          VirtualizingPanel.VirtualizationMode="Recycling"
          ScrollViewer.ScrollChanged="ListView1_ScrollChanged">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="删除该图片" Click="MenuItem_DeleteSingle_Click"/>
                                
                                <MenuItem x:Name="Menu_moveto" Header="移动" Click="MenuItem_MoveTo_Click"/>
                                <MenuItem Header="移动到样式目录" Click="MenuItem_moveto_yangshi_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Width="128" Height="144" Margin="2">
                                    <Image Source="{Binding Thumb}" Width="128" Height="128"/>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
                <GridSplitter  Grid.Row="1" Height="3" HorizontalAlignment="Stretch" Background="#bbbbbb"/>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="197*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="133*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 列分割条 -->
                    <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" Background="#bbbbbb"/>

                    <!-- 左侧图片 -->
                    <Image x:Name="PictureBox1" Grid.Column="0" Stretch="Uniform" Margin="2"/>

                    <!-- 右侧：按钮 + TextBox -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 按钮条 -->
                            <RowDefinition Height="*"/>
                            <!-- TextBox1 -->
                        </Grid.RowDefinitions>

                        <!-- 按钮条 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                            <Button x:Name="BtnSavePrompt" Content="保存"  Click="BtnSavePrompt_Click" MouseRightButtonUp="BtnSavePrompt_Click"
                     ToolTip="左键保存，右键改变保存位置"/>
                            <!-- 以后加按钮继续往这里摆 -->

                            <TextBox x:Name="TextBox2" Text="50" Background="#aaaaaa" Style="{StaticResource RoundedTextBox}"/>
                            <Button x:Name="BtnSearchByLength" Content="按长度搜索" Click="BtnSearchByLength_Click" 
          />

                        </StackPanel>

                        <!-- 原来的 TextBox1 -->
                        <TextBox x:Name="TextBox1" Grid.Row="1" Background="#aaaaaa"
                  AcceptsReturn="True"
                 TextWrapping="Wrap" Style="{StaticResource RoundedTextBox}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 MouseDoubleClick="TextBox1_MouseDoubleClick"/>
                    </Grid>

                </Grid>
            </Grid>
            <!-- 右侧 workflow 树 -->
            <TreeView x:Name="TreeView2" Grid.Column="4" Background="#999999" BorderThickness="0" FontSize="16" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectedItemChanged="TreeView2_SelectedItemChanged"/>
            <!-- SelectedItemChanged="TreeView2_SelectedItemChanged"/>-->
        </Grid>
    </DockPanel>
    <Window.Resources>
        
    </Window.Resources>
</Window>
